<style>
.style_image {
  z-index: -1;
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
}

.card-panel {
  width: 360px;
  padding: 8% 0 0;
  margin: auto;
  border: 3px solid white;
  padding:20px 30px;
  
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.body {
  font-family:나눔고딕;
}

.container {
  z-index: 1;
  position: relative;
}

input, label {
  color: white;
}

</style>

<%= image_tag 'background.jpg', :class => "style_image" %>
<div class="container">
  
  <div class="card-panel hoverable transparent">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="field">
        <p class="white-text center-align">이메일</p>
        <%= f.email_field :email, autofocus: true, placeholder: "이메일을 입력해 주세요.", class: "center-align" %>
      </div>
    
      <div class="row">
        <div class="actions center-align">
          <button class="btn waves-effect waves-light col s8 offset-s2" type="submit" name="commit">비밀번호 재설정 하기</button>
        </div>
      </div>
      
    <% end %>
  
    <%= render "devise/shared/links" %>
    
  </div>
</div>
