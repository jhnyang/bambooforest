<%- if controller_name != 'sessions' %>
  <div class="center-align">  
    <%= link_to "로그인 화면 이동", new_session_path(resource_name), class: "white-text waves-effect waves-teal btn-flat" %>
  </div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="center-align">
    <%= link_to "가입하기", new_registration_path(resource_name), class: "white-text waves-effect waves-teal btn-flat" %>
  </div>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="center-align">
    <%= link_to "비밀번호 찾기", new_password_path(resource_name), class: "white-text waves-effect waves-teal btn-flat" %>
  </div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class="center-align">  
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "white-text waves-effect waves-teal btn-flat" %>
  </div>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class="center-align">
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "white-text waves-effect waves-teal btn-flat" %>
  </div>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <div class="center-align">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "white-text waves-effect waves-teal btn-flat" %>
    <% end -%>
  </div>
<% end -%>
